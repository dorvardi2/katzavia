@{ ViewData["Title"] = "Home Page"; }

<div class="text-center">
    <h1 class="display-4" id="homeTitle">Katzavia</h1>
</div>
<head>
    <link rel="feedback" type="text/css" href="~/css/feedback.css" media=”screen” />
</head>

@*Choosing the department that the user needs*@
<div class="row">
    <div class="col-sm-6">
        <div class="card">
            <div class="card-body">
                <p><img src="~/Images/Beef-Meat.png" style=" height:250px;width:450px;" /></p>
                <h5 class="card-title">מידע על הנתחים שלנו</h5>
                <a asp-controller="Products" asp-action="Index" class="btn btn-primary">לחץ כאן</a>
            </div>
        </div>
    </div>

    <div class="col-sm-6">
        <div class="card">
            <div class="card-body">
                <p><img src="~/Images/events.jpg" style=" height:250px;width:450px;" /></p>
                <h5 class="card-title">לקביעת אירוע</h5>
                <a asp-controller="Events" asp-action="Create" class="btn btn-primary">לחץ כאן</a>
            </div>
        </div>
    </div>
</div>

<p><br /></p>

<div class="text-center">
    <h3 class="display-4">עלינו</h3>
    <h5 class="text-center">
        ברוך הבא לקצביית המכללה למנהל !
    </h5>
    <h5 class="text-center">
        כאן תוכלו להינות ממגוון נתחים טריים ומשובחים לבחירתכם !
    </h5>
    <h5 class="text-center">
        כלל הבשר שלנו הינו בשר טרי ומאושר ע"י הרבנות הארצית !
    </h5>
    <h5 class="text-center">
        אז מאחלים לכם הנאה מרבית וכמובן אם נהנתם ספרו לחבריכם,לא נהנתם? ספרו לנו !
    </h5>
</div>
<p><br /></p>
<p><br /></p>
<script src="~/js/feedback.js"></script>
<h2 id="fh2">אנו נשמח לחוות דעת!</h2>
<h6 id="fh6">חוות דעתכם תעזור לנו לשפר את אתרינו  איכות מוצרינו ואת שירותינו!</h6>


<form id="feedback" action="">
    <div class="pinfo">פרטים אישיים</div>

    <div class="form-group">
        <div class="col-md-4 inputGroupContainer">
            <div class="input-group">
                <span class="input-group-addon"><i class="fa fa-user"></i></span>
                <input name="name" placeholder="שם פרטי" class="form-control" type="text">
            </div>
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-4 inputGroupContainer">
            <div class="input-group">
                <span class="input-group-addon"><i class="fa fa-envelope"></i></span>
                <input name="email" type="email" class="form-control" placeholder="מייל">
            </div>
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-4 inputGroupContainer">
            <div class="input-group">
                <span class="input-group-addon"><i class="fa fa-globe"></i></span>
                <input name="URL" placeholder="מהיכן הגעת" class="form-control" type="url">
            </div>
        </div>
    </div>

    <div class="pinfo">דרג את השירות</div>


    <div class="form-group">
        <div class="col-md-4 inputGroupContainer">
            <div class="input-group">
                <span class="input-group-addon"><i class="fa fa-heart"></i></span>
                <select class="form-control" id="rate">
                    <option value="1star">1</option>
                    <option value="2stars">2</option>
                    <option value="3stars">3</option>
                    <option value="4stars">4</option>
                    <option value="5stars">5</option>
                </select>
            </div>
        </div>
    </div>

    <div class="pinfo">כתוב את המשוב שלך</div>


    <div class="form-group">
        <div class="col-md-4 inputGroupContainer">
            <div class="input-group">
                <span class="input-group-addon"><i class="fa fa-pencil"></i></span>
                <textarea class="form-control" id="review" rows="3"></textarea>

            </div>
        </div>
    </div>

    <button type="submit" class="btn btn-primary">שלח</button>
</form>
